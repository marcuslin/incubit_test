<% case params[:controller] %>
<% when 'sessions' %>
  <%= button_to 'Sign Up', sign_up_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
  <%= button_to 'Forgot Password', new_password_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
<% when 'passwords' %>
  <%= button_to "Sign In", sign_in_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
  <%= button_to 'Sign Up', sign_up_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
<% when 'registrations' %>
  <%= button_to "Sign In", sign_in_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
  <%= button_to 'Forgot Password', new_password_path, class: 'btn btn-outline-info mt-1', method: 'get' %>
<% when 'users' %>
  <%= button_to 'Sign Out', sign_out_path, class: 'btn btn-outline-info mt-1', method: 'delete' %>
<% end %>
